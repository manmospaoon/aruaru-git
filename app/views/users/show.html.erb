<div class="row">
  <aside class="col-sm-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 200 }) %>" alt="">
      </div>
    </div>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">投稿したあるある <span class="badge badge-secondary"><%= @count_themes %></span></a></li>
      <li class="nav-item"><a href="#" class="nav-link">評価したあるある</a></li>
    </ul>
    <%= render 'themes/themes', themes: @themes %>
  </div>
</div>
