<div class="row">
  <aside>
    <div class = " col-md-12" >
    <div class="card border-info mb-3 ">
      <div class="card-header">
        <h5 class="card-title"><%= @user.name %></h5>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 120 }) %>" alt="">
      </div>
    </div>
    </div>
  </aside>
  <div class="col-md-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">投稿したあるある <span class="badge badge-secondary"><%= @count_comments %></span></a></li>
      <li class="nav-item"><a href="<%= fav_comments_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(fav_comments_user_path(@user)) %>">いいね！したあるある <span class="badge badge-secondary"><%= @count_likes %></a></li>
    </ul>
    <%= render 'comments/comments', comments: @fav_comments %>
    </ul>
  </div>
</div>