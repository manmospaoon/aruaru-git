<div class="row">
  <div class="col-sm-6 offset-sm-3">
  <h4 class="border-bottom mb-5 pb-1">あるあるアカウントを登録する</h4>
    <%= form_with(model: @user, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      
          <form>
            <div class="form-group">
              <%= f.label :name, 'ユーザー名', class: 'control-label' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
      
            <div class="form-group">
              <%= f.label :email, 'メールアドレス', class: 'control-label' %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password, 'パスワードを作成', class: 'control-label' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, 'パスワードの再入力', class: 'control-label' %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>

            <%= f.submit '登録する', class: 'btn btn-primary btn-block mt-4' %>
          </form>

      <% end %>
</div>
</div>
