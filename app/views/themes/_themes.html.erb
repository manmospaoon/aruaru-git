<ul class="list-unstyled">
  <% themes.each do |theme| %>
    <li class="media mb-3 pr-3">
      <div class="bg-dark">
        <p class="text-white"><%= theme.content %></p>
      </div> 
      <div>
        <p><%= link_to theme.user.name, user_path(theme.user) %> </p>
      </div>
      <div>
          <% if current_user == theme.user %>
            <%= link_to "削除", theme, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
    </li>
  <% end %>
  <%= paginate themes %>
</ul>